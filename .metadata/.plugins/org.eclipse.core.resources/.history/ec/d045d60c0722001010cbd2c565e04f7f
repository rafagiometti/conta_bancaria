package conta_bancaria;

import conta_bancaria.util.Cores;

public class Menu {

    public static void main(String[] args) {
        
        // Fundo roxo + texto verde para o cabeçalho
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + Cores.TEXT_GREEN_BOLD_BRIGHT + "                BANCO DO BRAZIL COM Z                ");
        
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + "\n");

        // Estrelas brancas com fundo roxo
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + Cores.TEXT_WHITE_BOLD + "*****************************************************");

        System.out.println("\n");

        // Menu com texto verde e fundo roxo
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + Cores.TEXT_GREEN_BOLD_BRIGHT + " 1 - Criar Conta");
        System.out.println("2 - Listar todas as Contas");
        System.out.println("3 - Buscar conta por Número");
        System.out.println("4 - Atualizar Dados da Conta");
        System.out.println("5 - Apagar conta");
        System.out.println("6 - Sacar");
        System.out.println("7 - Depositar");
        System.out.println("8 - Transferir valores entre Contas");
        System.out.println("9 - Sair");

        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + "\n");

        // Estrelas brancas com fundo roxo
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + Cores.TEXT_WHITE_BOLD + "*****************************************************");

        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + "\n");

        // Pergunta final com fundo roxo e texto verde
        System.out.println(Cores.ANSI_PURPLE_BACKGROUND_BRIGHT + Cores.TEXT_GREEN_BOLD_BRIGHT + "Entre com a opção desejada:");

        // Reset para voltar ao padrão depois de tudo
        System.out.print(Cores.TEXT_RESET);
    }
}

